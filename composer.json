{
  "name": "hultberg/mexifest",
  "description": "A manifest.json reader",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Edvin Hultberg",
      "email": "post@hultberg.no"
    }
  ],
  "require": {
    "php": ">=7.1",
    "league/flysystem": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "Hultberg\\Mexifest\\": "src/",
      "Hultberg\\Mexifest\\Tests\\": "tests/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "platform": {
      "php": "7.1.13"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^7.2",
    "phpstan/phpstan-shim": "^0.9.2"
  },
  "scripts": {
    "test": "phpunit --colors tests/"
  }
}
